<%= form_with(model: @house, local: true) do |form| %>

<% if @house.errors.any? %>
  <div id="error_explanation">
    <h2>登録ミスが<%= @house.errors.count %>件あります。</h2>
    <ul>
    <% @house.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div>
  <p><%= form.label :物件名 %></p>
  <p><%= form.text_field :title %></p>
</div>

<div>
  <p><%= form.label :賃料 %></p>
  <p><%= form.text_field :rent_fee %>円</p>
</div>

<div>
  <p><%= form.label :住所 %></p>
  <p><%= form.text_field :address %></p>
</div>

<div>
  <p><%= form.label :築年数 %></p>
  <p><%= form.text_field :age %>年</p>
</div>

<div>
  <p><%= form.label :備考 %></p>
  <p><%= form.text_area :remark %></p>
</div>

<p>――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――――<p>

<%= form.fields_for :stations do | station | %>

<h3>最寄り駅<%= station.index + 1 %></h3>

<div>
  <p><%= station.label :route ,"路線名" %></p>
  <p><%= station.text_field :route %></p>
</div>

<div>
  <p><%= station.label :station ,"駅名"%></p>
  <p><%= station.text_field :station %> </p>
</div>

<div>
  <p><%= station.label :minute ,"徒歩分数"%></p>
  <p><%= station.text_field :minute %>分</p>
</div>

<% end %>
<%= form.submit "登録する" %>
<% end %>
